    [послание] иакова
);
<1_peter> = (
    первое [послание] петра
);
<2_peter> = (
    второе [послание] петра
);
<1_john> = (
    первое [послание] иоанна
);
<2_john> = (
    второе [послание] иоанна
);
<3_john> = (
    третье [послание] иоанна
);
<jude> = (
    [послание] иуды
);
<romans> = (
    [послание] [к] римлянам
);
<1_corinthians> = (
    первое [послание] [к] коринфянам
);
<2_corinthians> = (
    второе [послание] [к] коринфянам
);
<galatians> = (
